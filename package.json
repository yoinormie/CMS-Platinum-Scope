{
  "name": "cms-platinum-scope",
  "version": "1.0.0",
  "displayName": "CMS Platinum Scope",
  "description": "CMS Platinum Scope",
  "author": "Yoel Garc√≠a",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev:react": "cd react-source && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "build:react": "cd react-source && npm run build",
    "build:electron": "tsc -p tsconfig.json",
    "build": "npm run build:react && npm run build:electron",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.platinum.cms",
    "productName": "CMS Platinum Scope",
    "asar": true,
    "files": [
      "dist/**/*",
      "react-source/dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/electron/main.js"
    },
    "extraResources": [
      {
        "from": "react-source/dist",
        "to": "react"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "electron-builder": "^26.6.0"
  },
  "dependencies": {
    "@types/electron-store": "^1.3.1",
    "electron-store": "^11.0.2",
    "simple-git": "^3.30.0"
  }
}